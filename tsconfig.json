{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "allowJs": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "declaration": true,
    "types": ["three"],
    "paths": {
      "@/*": ["src/*"],
      "~/*": ["/*"]
    }
  },
  "include": ["src/**/*.ts", "./src/typings/**/*"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
